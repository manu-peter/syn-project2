{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "target": "ES2021",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "dist",
        "noEmit": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "rootDir": "./server",
        "resolveJsonModule": true,
        "paths": {
            "@server/*": [
                "./server/*"
            ]
        }
    },
    "include": [
        "server",
    ],
    "lib": [
        "ES2021"
    ]
}